<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.gestionacademicaapp.ui.career.CareerVM" />
    </data>

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context=".ui.career.CareerActivity">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addCareer"
            android:contentDescription="New Career"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:layout_gravity="bottom|right"
            app:srcCompat="@android:drawable/ic_input_add" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/career_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/career_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="682dp"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</layout>